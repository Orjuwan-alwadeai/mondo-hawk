<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Hawk Indexing System"
            id="org.hawk.core">
      </category>
      <view
            category="org.hawk.core"
            class="org.hawk.ui.HawkUIEclipseViewImpl"
            icon="icons/database.png"
            id="org.hawk.ui.VCSNoSQLUIViewImpl"
            name="Hawk Indexing System UI"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.hawk.ui.VCSNoSQLUIViewImpl">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
